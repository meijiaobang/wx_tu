/* miniprogram/pages/comment/comment.wxss */
/* 1.背景图片 */
.detail-container{
  /* 背景图片高度 */
  height: 400rpx;
  /* 透明度 */
  opacity: .9;
  /* 滤镜 */
  filter:blur(40rpx);
}
/* 2.添加遮罩层 */
.detail-mask{
  /* 绝对定位 */
  position: absolute;
  left: 0;
  top: 0;
  /* 显示模糊图片底层 */
  z-index: -1;
  /* 充满整个父元素 */
  width: 100%;
  /* 高度同上 */
  height: 400rpx;
  /* 深色背景 */
  background: #333333;
}
/* 3.电影详情信息 */
.detail-info{
  /* 绝对定位 */
  position: absolute;
  top:0;
  left: 0;
  /* 宽度充满父元素 */
  width: 100%;
  /* 高度400rpx */
  height: 400rpx;
  padding: 20rpx;
  /* 弹性布局 */
  display: flex;
}
/* 4.左侧图片 */
.detail-img{
  width: 280rpx;
  height: 90%;
  /* r右侧文字间距离 */
  margin-right: 24rpx;
}
/* 5.右侧文字区域 */
.detail{
  /* 行高 */
  line-height: 60rpx;
}
.detail view{
  color: #fff;
  font-size: 24rpx;
}
/* 6.预览图片 */
.comment-img{
  width: 200rpx;
  height:200rpx;
  margin-right: 20rpx;
}